            }
        }); --}}

        document.getElementById('btn').addEventListener('click', function (event) {
            const innerText = document.getElementById('login').innerText; // Get the inner text of the 'login' element
            if (innerText === "Login") {
                event.preventDefault(); // Prevent default action if not "Login"
                showToast('You need to login first'); // Show toast message
            }else{
                window.location.href = '/home/personal';
            }
        });

        const toastContainer = document.getElementById('toastContainer');

        function showToast(message) {
            console.log('Toast message:', message); // Debugging output
            const toast = document.createElement('div');
            toast.classList.add('toast');
            toast.innerText = message;
            toastContainer.appendChild(toast);

            // Ensure the container is visible when adding a toast
            toastContainer.style.display = 'block';

            setTimeout(() => {
                toast.remove();
                // Hide the container if no toasts are left
                if (toastContainer.children.length === 0) {
                    toastContainer.style.display = 'none';
                }
            }, 1000); // Remove toast after 3 seconds
        }
    </script>
</body>

</html>
